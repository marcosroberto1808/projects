<%= form_for(@forum) do |f| %>
  <% if @forum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@forum.errors.count, "erro(s)") %> impediram este Foro de ser salvo:</h2>

      <ul>
      <% @forum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :cidade %><br>
    <%= f.select :cidade, (@cidades.map{|c| [c.nome, c.id] }) %>
  </div>  

  <div class="field">
    <%= f.label :uf, "UF" %><br>
    <%= f.select :uf, (listaEstados) %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
