<% if @forum.present? and @forum.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@forum.errors.count, "erro(s)") %> impediram este Foro de ser salvo:</h2>

    <ul>
    <% @forum.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<h1>Lista de Foros</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cidade</th>
      <th>UF</th>      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @foruns.each do |forum| %>
      <tr>
        <td><%= forum.nome %></td>
        <td><%= forum.cidade_nome %></td>
        <td><%= forum.uf %></td>        
        <td><%= link_to 'Exibir', forum %></td>
        <td><%= link_to 'Editar', edit_forum_path(forum) %></td>
        <td><%= link_to 'Deletar', forum, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Foro', new_forum_path %>
