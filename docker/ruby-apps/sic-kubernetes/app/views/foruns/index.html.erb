<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Lista de Foros</h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <% if @forum.present? and @forum.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@forum.errors.count, "erro(s)") %> impediram este Foro de ser salvo:</h2>

          <ul>
          <% @forum.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= link_to 'Novo Foro', new_forum_path, :class=> "btn btn-primary" %>
      <table class="table table-hover margin-top">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Cidade</th>
            <th>UF</th>      
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @foruns.each do |forum| %>
            <tr>
              <td><%= forum.nome.mb_chars.downcase.humanize.titleize %></td>
              <td><%= forum.cidade_nome.mb_chars.downcase.humanize.titleize %></td>
              <td><%= forum.uf %></td>
               <td class="icon-width"><%= link_to 'Exibir', forum, :class=> "intra-icon icon-exibir" %></td>
              <td class="icon-width"><%= link_to 'Editar', edit_forum_path(forum), :class=> "intra-icon icon-edit" %></td>
              <td class="icon-width"><%= link_to 'Deletar', forum, :class=> "intra-icon icon-excluir", method: :delete, data: { confirm: 'Tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>