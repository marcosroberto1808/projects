<%= form_for(@assinatura_virtual) do |f| %>
  <% if @assinatura_virtual.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assinatura_virtual.errors.count, "erro(s)") %> impediram esta assinatura de ser salva:</h2>

      <ul>
      <% @assinatura_virtual.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url, "Assinatura:" %><br>
    <%= f.file_field :url %>
  </div>

  <%= f.hidden_field :assistido, value: get_cpf %>

  <div class="actions">
    <%= f.submit "Criar Assinatura Virtual" %>
  </div>
<% end %>
