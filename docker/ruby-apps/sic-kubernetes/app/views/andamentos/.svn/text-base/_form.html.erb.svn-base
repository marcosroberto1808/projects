<%= javascript_include_tag "jquery.mask", "mascaras", "datepicker" %>

<%= form_for(@andamento) do |f| %>
  <% if @andamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@andamento.errors.count, "erro(s)") %> impediram esse Andamento de ser salvo:</h2>

      <ul>
      <% @andamento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :data %><br>
    <%= f.text_field :data, class: "campo_data", size: 8 %>    
  </div>

  <div class="field">
    <%= f.label :classificacao_andamento_id, "Classificação" %><br>
    <%= f.select :classificacao_andamento_id, @classificacao.map{|c| [c.descricao, c.id]} %>
  </div>

  <div class="field">
    <%= f.label :numero_processual, "Numero do Incidente Processual" %><br>
    <%= f.text_field :numero_processual, class: "numero_processo", size: 20 %>
  </div>

  <%= f.hidden_field :documento_id %>
  <%= f.hidden_field :processo_id, value: params["processo"] %>

  <div class="field">
    <%= f.label :resposta_necessidade, "Necessita Resposta" %>
    <%= f.check_box :resposta_necessidade %>
  </div>

  <div class="field">
    <%= f.label :data_verificar_resposta, "Data Verificar Resposta" %><br>
    <%= f.text_field :data_verificar_resposta, class: "campo_data", size: 8 %>
  </div>


  <div class="field">
    <%= f.label :data_resposta, "Data Resposta" %><br>
    <%= f.text_field :data_resposta, class: "campo_data", size: 8 %>
  </div>

  <div class="field">
    <%= f.label :resposta %><br>
    <%= f.text_area :resposta %>
  </div>

  <div class="field">
    <%= f.label :resultado %><br>
    <%= f.select :resultado, ["", "Deferido", "Indeferido", "Deferido Parcialmente"] %>
  </div>

  <div class="field">
    <%= f.label :anexo, "Anexo:" %><br>
    <%= f.file_field 'anexo' %>
  </div>  

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to image_tag("seta-voltar.png", :alt => "Voltar", size: "25"), "/processo_judiciais/#{params["processo"]}" %>
<%= link_to 'Voltar', "/processo_judiciais/#{params["processo"]}" %>