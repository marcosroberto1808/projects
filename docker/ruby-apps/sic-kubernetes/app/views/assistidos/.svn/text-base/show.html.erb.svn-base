                    <%= radio_button_tag :tratamento_descricao, "Sem internação" %><label>Sem internação</label>
                  <% else %>
                    <%= radio_button_tag :tratamento_descricao, "Com internação" %><label>Com internação</label>
                    <%= radio_button_tag :tratamento_descricao, "Sem internação", true %><label>Sem internação</label>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr>
              <td class="dados_pessoais_label"><label>Problema de Saúde<label></td>
              <td class="align_left">              
                <%= check_box_tag :saude, true, @socioe.problema_sauda %>
                <div class="field ocultar" id="hiden_saude">
                  <%= text_area_tag :saude_descricao, @socioe.problema_sauda_descricao, size: "30x1", placeholder: "Descrição." %><br>
                </div>
              </td>
            </tr>              
            <tr>
              <td class="dados_pessoais_label"><label>Realiza Atividades<label></td>
              <td class="align_left">
                <%= check_box_tag :atividades, true, @socioe.incluido_atividade_presidio %>
                <div class="field ocultar" id="hiden_atividades">
                  <%= text_area_tag :atividades_descricao, @socioe.incluido_atividade_presidio_descricao, size: "30x1", placeholder: "Descrição." %><br>
                </div>
              </td>
            </tr>
            <tr>
              <td class="dados_pessoais_label"><label>Era Empregado<label></td>
              <td class="align_left">
                <%= check_box_tag :empregado, true, @socioe.trabalhava_antes_prisao %>
                <div class="field ocultar" id="hiden_empregado">
                <%= text_area_tag :empregado_descricao, @socioe.trabalhava_antes_prisao_descricao, size: "30x1", placeholder: "Descrição." %><br>
              </div>
              </td>
            </tr>            
            <tr>
