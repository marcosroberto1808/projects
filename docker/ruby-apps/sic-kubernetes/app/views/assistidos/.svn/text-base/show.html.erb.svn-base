<div class="documentos_pessoais" class="bloco_info margem_bloco_info_anterior">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h4>
        <%= image_tag "glyphicons/glyphicons_144_folder_open.png" %>  
        Documentos Pessoais

        <%= link_to(image_tag("glyphicons/glyphicons_190_circle_plus.png", alt: "Adicionar Documento Pessoal", title: "Adicionar Documento Pessoal"), "/documentos/new?tipo=1", id: "editar", class: "botao botao_hide") %>

        <%= image_tag "glyphicons/glyphicons_369_collapse_top.png", class: "botao botao_direita", id: "minimizar", onclick: "minimizar_bloco('documentos_pessoais',this)" %>
      </h4>Clique no documento para iniciar o download.
    </div>
    <div class="panel-body" id="documentos_pessoais">
      <table class="area_100">
        <% @documentos_pessoais.each do |documento| %>
          <tr>
            <td class="label_icon_documentos">
              <%= image_tag "glyphicons/glyphicons_036_file.png" %>
            </td>
            <td class="align_left">
              <%= form_tag "/download" do %>
                <%= hidden_field_tag :documento, documento.id %>            
                <%= button_to documento.nome_url, {:controller => :assistidos, :action => :download }, class: "margem_documento_top" %>
              <% end %>                
            </td>
            <td class="align_left">
              <%= tamanho_arquivo("public/documentos/#{documento.assistido_id}/pessoais/#{documento.nome_url}") %>
            </td>
            <td class="align_left ocultar" id="btn_exluir_doc_pes">
              <%= link_to documento, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este documento?' } do %>         
                <%= image_tag "glyphicons/glyphicons_197_remove.png" %>
              <% end %>       
            </td>                                           
          </tr>
        <% end %>             
      </table>
    </div>
  </div>
</div>

