<%= stylesheet_link_tag "assistidos" %>
<%= javascript_include_tag "assistidos", "informacoes_socioeconomicas_radio_buttons" %>

<% if @assistido.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@assistido.errors.count, "error") %> impediram este assistido de ser salvo:</h2>

    <ul>
    <% @assistido.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div id="info_base" class="bloco_info">
  <div class="panel panel-success">
    <div class="panel-heading">      
      <h4><%= image_tag "glyphicons/glyphicons_352_nameplate.png" %>  Assistido</h4>
    </div>
      <div class="panel-body">
        <table class="table-panel">
          <tr>
            <td class="avatar_side">                
              <div class="avatar_box">
                <img src="/<%= @assistido.imagem_url %>" alt="Avatar" class="avatar_imagem_big">
                <!-- <label><%= link_to 'Alterar Imagem', "", id: "avatar", class: "alterar_avatar" %></label> -->
              </div>  
            </td>

            <td>
            <div class="info_resumo">
              <div class="center">
                <p class="alert alert-error ocultar" id="erro_update_situacao"></p>
              </div>
              <h3 id="nome_label" title="<%= @assistido.nome %>"> <%= @assistido.nome %> </h3>          
                <%= image_tag "glyphicons/glyphicons_150_edit.png", class: "botao botao_hide", id: "editar", onclick: "editar_situacao();" %>
                <div id="bloco_situacao">
                  <h4 id="situacao_label">
                    Encontra-se: <%= @situacao.situacao_estado %>
                  </h4>
                  <h5 id="situacao_local_label"><%= @situacao.instituicao %>, 
                    <%= @situacao.cidade %>, <%= @situacao.uf %> - 
                    <%= l @situacao.data_prisao if @situacao.data_prisao %>
                  </h5>
                </div>
                <div id="situacao_form" class="ocultar">
                  <fieldset>
                    <%= form_tag "/update_situacao", remote: true do %>
                      <b>Situação:</b>
                      <% if @assistido.inquerito_policial.present? %>
                        <%= select_tag :situacao, options_for_select(["Não Informado", "Preso", "Em Liberdade"], @situacao.situacao_estado) %><br>
                      <% else %>
                        <%= select_tag :situacao, options_for_select(["Não Informado", "Em Liberdade"], @situacao.situacao_estado) %><br>
                      <% end %>
                      <b>Cidade/UF da Prisão:</b> <br>
                      <%= text_field_tag :cidade, @situacao.cidade %>/
                      <%= select_tag :uf, options_for_select(listaEstados, @situacao.uf), :include_blank => true %>
                      <br>
                      <b>Instituição<b><br>          
                      <%= text_field_tag :instituicao, @situacao.instituicao %><br>
                      <b>Data Prisão<b><br>
                      <% if @situacao.data_prisao %>
                        <%= text_field_tag :data_prisao, (l @situacao.data_prisao), class: "campo_data", size: 10 %><br>
                      <% else %>
                         <%= text_field_tag :data_prisao, (@situacao.data_prisao), class: "campo_data", size: 10 %><br>
                      <% end %>                        
                      <b>Em caso de Prisão<b><br>
                      <label>Notificar</label> - <%= check_box_tag :notificar, "X", checked: true %><br>
                      <!--
                        <%= select_tag :local_atuacao, options_for_select(get_locais_atuacao(get_cpf).map{|l| [l.descricao_local, l.id]}), style: "width:300px;" %>
                        <br>
                      -->
                      <label>Inquérito:</label><br>
                      <%= select_tag :inquerito, options_for_select(@assistido.inquerito_policial.map{|i|[i.numero, i.id]}) %><br>

                      <%= button_to 'Salvar' %>
                    <% end %>
                  </fieldset>                 
                </div>
                <label>Último Inquérito:</label> 
                <%= @assistido.inquerito_policial.last ? @assistido.inquerito_policial.last.numero : "Nenhum Inquerito Cadastrado" %> <br>
                <label>Anterior:</label> 
                <%= @assistido.inquerito_policial[-2] ? @assistido.inquerito_policial[-2].numero : "Nenhum Inquerito Cadastrado" %> <br>
                <label>Processos Judiciais:</label> 
                <%= @assistido.processo_judicial.length %> <br>
                <label>Inqueritos:</label> 
                <%= @assistido.inquerito_policial.length %> <br>

                <a id="botao_editar" role="button" class="btn btn-primary" onclick="editar_assistido()">Editar</a>

                <a id="botao_editar_concluir" role="button" class="btn btn-info esconder" onclick="editar_assistido_concluir()">Concluir Edições</a>

                <%= link_to 'Excluir Assistido', @assistido, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este assistido?' }, type: 'button', class: "btn btn-danger esconder", id: "excluir" %>
            </td> 
          </tr>  
        </table>

        <div class="align_right">
          <a role="button" class="btn btn-success" href="#informacoes_pessoais">Informações Pessoais</a>
        </div>
      </div>
</div>

<div class="resumo" class="margem_bloco_info_anterior">
  <div id="painel_resumo" class="panel panel-success" class="bloco_info">
    <div class="panel-heading">
      <h4>
        <%= image_tag "glyphicons/glyphicons_351_book_open.png" %>  Resumo 
        <%= image_tag "glyphicons/glyphicons_150_edit.png", class: "botao botao_hide", id: "editar", onclick: "editar_bloco('resumo')" %>
        <%= image_tag "glyphicons/glyphicons_369_collapse_top.png", class: "botao botao_direita", id: "minimizar", onclick: "minimizar_bloco('resumo',this)" %>        
      </h4>
    </div>
      <div class="panel-body" id="resumo">
        <p><%= @assistido.resumo %></p>
      </div>
      <div class="panel-body ocultar" id="resumo_form">
        <%= form_tag "/update_resumo", remote: true do %>
          <%= text_area_tag :resumo, @assistido.resumo, cols: 75, rows: 5 %>
          <%= hidden_field_tag :assistido_id, @assistido.id %>            
          <%= button_to 'Salvar' %>
        <% end %>
      </div> 
    </div>       
</div>

<div class="processos_judiciais" class="bloco_info margem_bloco_info_anterior">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h4>
        <%= image_tag "glyphicons/glyphicons_319_sort.png" %>  Processos Judiciais

        <%= link_to(image_tag("glyphicons/glyphicons_190_circle_plus.png", alt: "Adicionar Processo Judicial", title: "Adicionar Processo Judicial"), new_processo_judicial_path, id: "editar", class: "botao botao_hide", onclick: "editar_bloco('processos_judiciais')") %>

        <%= image_tag "glyphicons/glyphicons_369_collapse_top.png", class: "botao botao_direita", id: "minimizar", onclick: "minimizar_bloco('processos_judiciais',this)" %>        
      </h4>Clique no Processo para ver os detalhes.
    </div>
      <div class="panel-body" id="processos_judiciais">
        <% @assistido.processo_judicial.each do |processo| %>
          <table>
            <tr>
              <td class="align_left">
                <div id="processo_judicial_item" class="sem_eventos" onclick="editar_processo_judicial('<%= processo.id%>')">
                  <p><b><%= processo.numero %></b></p>
                  <label><%= processo.vara.nome %> - <%= processo.vara.forum.nome %></label><br>
                  <p>
                    <%= get_mes_by_num(processo.data_abertura.month) %> de 
                    <%= processo.data_abertura.year %> - Até o momento 
                    <%= Date.today.year - processo.data_abertura.year %> anos e 
                    <%= Date.today.month - processo.data_abertura.month %> meses. | 
                    <%= processo.cidade %>, <%= processo.estado %><br><br>
                    <% if processo.resumo.length > 145 %>
                      <%= processo.resumo[0..145]+"..." %>
                    <% else %>
                      <%= processo.resumo %>
                    <% end %>                    
                  </p>
                </div>
              </td>

              <td>
                <%= link_to(image_tag("glyphicons/glyphicons_029_notes_2.png", alt: "Exibir Processo", title: "Visualizar detalhes do Processo"), processo, id: "show", class: "botao") %> 
              </td>                
            </tr>
          </table>
          <hr>            
        <% end %>
      </div>
    </div>
</div>

<div class="inqueritos" class="bloco_info margem_bloco_info_anterior">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h4>
        <%= image_tag "glyphicons/glyphicons_319_sort.png" %>  Inquéritos

        <%= link_to(image_tag("glyphicons/glyphicons_190_circle_plus.png", alt: "Adicionar Processo Judicial", title: "Adicionar Processo Judicial"), new_inquerito_policial_path, id: "editar", class: "botao botao_hide", onclick: "editar_bloco('inqueritos')") %>                  
        <%= image_tag "glyphicons/glyphicons_369_collapse_top.png", class: "botao botao_direita", id: "minimizar", onclick: "minimizar_bloco('inqueritos',this)" %>
      </h4>
      Clique no Inquérito para ver os detalhes.
    </div>
      <div class="panel-body" id="inqueritos">
        <% @assistido.inquerito_policial.each do |inquerito| %>
          <table>
            <tr>
              <td class="align_left">
                <div id="inquerito_policial_item" class="sem_eventos" onclick="editar_inquerito_policial('<%= inquerito.id%>')">
                  <p><b><%= inquerito.numero %></b></p>
                  <label><%= inquerito.origem_inquerito.nome %></label><br>
                  <% if inquerito.data_abertura.present? %>
                    <%= inquerito.data_abertura.day %> de 
                    <%= get_mes_by_num(inquerito.data_abertura.month) %> de 
                    <%= inquerito.data_abertura.year %> |
                  <% end %> 
                  <%= inquerito.cidade %>, <%= inquerito.uf %><br><br>
                  <% if inquerito.observacao.length > 145 %>
                    <%= inquerito.observacao[0..145]+"..." %>
                  <% else %>
                    <%= inquerito.observacao %>
                  <% end %>                   
                </div>   
              </td>

              <td>
                <%= link_to(image_tag("glyphicons/glyphicons_029_notes_2.png", alt: "Exibir Inquerito", title: "Visualizar detalhes do Inquérito"), inquerito, id: "show", class: "botao") %> 
              </td>                
            </tr>
          </table>
          <hr>
        <% end %>
      </div>
    </div>
</div>  

<div class="responde" class="bloco_info margem_bloco_info_anterior">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h4>
        <%= image_tag "glyphicons/glyphicons_196_circle_exclamation_mark.png" %>
        Responde a                  
        <%= image_tag "glyphicons/glyphicons_369_collapse_top.png", class: "botao botao_direita", id: "minimizar", onclick: "minimizar_bloco('responde',this)" %>
      </h4>
      Aponte o cursor para o código para visualizar a descrição da infração.
    </div>
      <div class="panel-body" id="responde">
        <% @assistido.inquerito_policial.each do |inquerito| %>
          <% inquerito.infracao.each do |infracao| %>
            <span class="label label-danger" title="<%= infracao.descricao_nome %>"><%= infracao.descricao_codigo %></span>
          <% end %>
        <% end %>
      </div>
    </div>  
</div>

