<h5>Adicionar Local</h5>

<%= form_tag "/add_local", remote: true do %>
	<div class="field">
		Local de Atuação<br>
  	<%= select_tag :lcl_atc_acompanhar, options_for_select(get_locais_atuacao(get_cpf).map{|l| [l.descricao_local, l.id]}) %>
  	<%= hidden_field_tag :id, params[:id] if params[:id]%>
	</div>

  <%= button_to "Adicionar", style: "margin-top:10px;" %>
<% end %>