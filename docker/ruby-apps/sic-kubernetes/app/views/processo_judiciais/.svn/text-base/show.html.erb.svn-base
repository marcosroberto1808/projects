<h1>Processo Judicial</h1>

<% if @processo_judicial.inquerito_policial %>
  <div class="field">
    <label>Inquérito:</label>
    <%= @processo_judicial.inquerito_policial.numero %><br>
  </div>
<% end %>

<div class="field">
  <label>Assistido:</label>
  <%= @assistido.nome %><br>
</div>

<div class="field">
  <label>Numero:</label>
  <%= @processo_judicial.numero %>
</div>

<div class="field">
  <label>Juizo:</label>
  <%= @processo_judicial.vara.nome %>
</div>

<div class="field">
  <label>Cidade:</label>
  <%= @processo_judicial.cidade %>
</div>

<div class="field">
  <label>UF:</label>
  <%= @processo_judicial.estado %>
</div>

<div class="field">
  <label>Foro:</label>
  <%= @processo_judicial.vara.forum.nome %>
</div>

<div class="field">
  <label>Natureza:</label>
  <%= @processo_judicial.natureza %>
</div>

<div class="field">
  <label>Data de Abertura:</label>
  <%= l @processo_judicial.data_abertura %>
</div>

<div class="field">
  <label>Data de Arquivamento:</label>
  <%=(l @processo_judicial.data_arquivamente) if @processo_judicial.data_arquivamente %>
</div>

<div class="field">
  <label>Resumo:</label>
  <%= @processo_judicial.resumo %>
</div>

<div class="field">
  <label>Julgado:</label>
  <%= check_box_tag "", "", @processo_judicial.julgado, disabled: true %>
</div>

<div class="field">
  <label>Recurso:</label>
  <%= check_box_tag "", "", @processo_judicial.recurso, disabled: true %>
</div>

<div class="field">
  <label>Carta Guia:</label>
  <%= check_box_tag "", "", @processo_judicial.carta_guia, disabled: true %>
</div>

<div class="field">
  <label>Status:</label>
  <%= check_box_tag "", "", @processo_judicial.status, disabled: true %>
</div>

<div class="field">
  <label>Tipo:</label>
  <%= @processo_judicial.tipo %>
</div>

<h5> Locais de Atuação </h5>

<br><br>

<%= link_to image_tag("glyphicons/glyphicons_030_pencil.png", :alt => "Editar", size: "25"), edit_processo_judicial_path(@processo_judicial) %>
<%= link_to 'Editar Processo', edit_processo_judicial_path(@processo_judicial) %>

<br>
<br>

<% if @andamentos.present? %>
  <%= render "andamentos_anexados" %>
<% end %>

<%= link_to image_tag("glyphicons/glyphicons_114_list.png", :alt => "Andamento", size: "25"), "/andamentos/new?processo=#{@processo_judicial.id}" %>
<%= link_to 'Adicionar Andamento', "/andamentos/new?processo=#{@processo_judicial.id}" %>

<br>
<br>

<%= link_to image_tag("seta-voltar.png", :alt => "Voltar", size: "25"), "/assistidos/#{session["assistido_selecionado"]}" %>
<%= link_to 'Voltar', "/assistidos/#{session["assistido_selecionado"]}" %>