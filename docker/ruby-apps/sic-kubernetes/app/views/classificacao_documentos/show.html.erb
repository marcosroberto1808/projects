<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Editar Classificação de Documento</h3>
      </div>
    <div class="panel-body">
        <div class="col-md-6">
            <p>
              <strong>Nome:</strong>
              <%= @classificacao_documento.descricao %>
            </p>

            <p>
                <strong>Tipo:</strong>
              <%= @classificacao_documento.tipo_documento_nome %>
            </p>

            <%= link_to 'Editar', edit_classificacao_documento_path(@classificacao_documento),:class=> "btn btn-primary" %>  |
            <%= link_to 'Voltar', classificacao_documentos_path, :class=> "btn btn-primary" %>
          </div>
      </div>
</div>
