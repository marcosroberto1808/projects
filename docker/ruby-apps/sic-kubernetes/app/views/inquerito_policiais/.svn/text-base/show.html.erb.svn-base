<h1>Inquérito Policial</h1>

<div class="field">
  <label>Assistido:</label>
  <%= Assistido.find(@inquerito_policial.assistido_id).nome %>
</div>

<div class="field">
  <label>Defensor Responsável:</label>
  <%= get_defensor_nome_cpf(@inquerito_policial.defensor_responsavel) %>
</div>

<div class="field">
  <label>Numero de Anexo:</label>
  <%= @inquerito_policial.numero_anexo %>
</div>

<div class="field">
  <label>Numero do Inquérito:</label>
  <%= @inquerito_policial.numero %>
</div>

<div class="field">
  <label>Origem:</label>
  <%= @inquerito_policial.origem_inquerito.nome %>
</div>

<div class="field">
  <label>Cidade:</label>
  <%= @inquerito_policial.cidade %>
</div>

<div class="field">
  <label>UF:</label>
  <%= @inquerito_policial.uf %>
</div>

<div class="field">
  <label>Infração Cidade:</label>
  <%= @inquerito_policial.cidade_crime %>
</div>

<div class="field">
  <label>Infração Logradouro:</label>
  <%= @inquerito_policial.infracao_logradouro %>
</div>

<div class="field">
  <label>Infração Numero:</label>
  <%= @inquerito_policial.infracao_numero %>
</div>

<div class="field">
  <label>Infração Complemento:</label>
  <%= @inquerito_policial.infracao_complemento %>
</div>

<div class="field">
  <label>Infração Bairro:</label>
  <%= @inquerito_policial.infracao_bairro %>
</div>

<div class="field">
  <label>Infração CEP:</label>
  <%= @inquerito_policial.infracao_cep %>
</div>

<div class="field">
  <label>Data de Abertura:</label>
  <%= l @inquerito_policial.data_abertura if @inquerito_policial.data_abertura %>
</div>

<div class="field">
  <label>Observação:</label>
  <%= @inquerito_policial.observacao %>
</div>

<div class="field">
  <label>Instauração:</label>
  <%= @inquerito_policial.instauracao %>
</div>

<div class="field">
  <label>Data Crime:</label>
  <%= l @inquerito_policial.data_crime %>
</div>

<div class="field">
  <label>Latitude:</label>
  <%= @inquerito_policial.latitude %>
</div>

<div class="field">
  <label>Longitude:</label>
  <%= @inquerito_policial.longitude %>
</div>

<h5> Infrações </h5>

<% @inquerito_policial.infracao.each do |infracao| %>
  <span class="label label-danger" title="<%= infracao.descricao_nome %>"><%= infracao.descricao_codigo %></span>
<% end %>

<br>
<br>

<%= link_to image_tag("glyphicons/glyphicons_030_pencil.png", :alt => "Editar", size: "25"), edit_processo_judicial_path(@inquerito_policial) %>
<%= link_to 'Editar Inquérito/Adicionar Documentos', edit_inquerito_policial_path(@inquerito_policial) %>

<%= render "documentos_anexados" %>

<%= link_to image_tag("seta-voltar.png", :alt => "Voltar", size: "25"), "/assistidos/#{session["assistido_selecionado"]}" %>
<%= link_to 'Voltar', "/assistidos/#{session["assistido_selecionado"]}" %>