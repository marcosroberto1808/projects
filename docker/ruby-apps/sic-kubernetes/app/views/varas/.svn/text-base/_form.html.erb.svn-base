<%= form_for(@vara) do |f| %>
  <% if @vara.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vara.errors.count, "erro(s)") %> imperdiram esta vara de ser salva:</h2>

      <ul>
      <% @vara.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :forum_id, "Forum" %><br>
    <%= f.select :forum_id, (@foruns.map{|f| [f.nome, f.id] }) %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>