<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Lista de Juízos</h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <% if @vara.present? and @vara.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@vara.errors.count, "erro(s)") %> imperdiram esta vara de ser salva:</h2>

          <ul>
          <% @vara.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= link_to 'Novo Juízo', new_vara_path, :class=>"btn btn-primary" %>

      <table class="table table-hover margin-top">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Foro</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @varas.each do |vara| %>
            <tr>
              <td><%= vara.nome %></td>
              <td><%= vara.forum.nome %></td>
              <td class="icon-width"><%= link_to 'Exibir', vara, :class=> "intra-icon icon-exibir" %></td>
              <td class="icon-width"><%= link_to 'Editar', edit_vara_path(vara), :class=> "intra-icon icon-edit" %></td>
              <td class="icon-width"><%= link_to 'Deletar', vara, :class=> "intra-icon icon-excluir", method: :delete, data: { confirm: 'Tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
