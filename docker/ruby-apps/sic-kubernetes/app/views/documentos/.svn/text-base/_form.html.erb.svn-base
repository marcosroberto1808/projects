<%= javascript_include_tag "jquery.mask", "mascaras", "datepicker" %>

<%= form_for(@documento) do |f| %>
  <% if @documento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@documento.errors.count, "error") %> impediram este Documento de ser salvo:</h2>

      <ul>
      <% @documento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="font-size: 16px";>
    <Label >Assistido: </label> <br>
    <%= @assistido.nome %>
  </div>  

  <div class="field">
    <%= f.label :data, "Data Ato" %><br>
    <% if @documento["data"] %>
      <%= f.text_field :data, value: (l @documento["data"]), size: 7, class: "campo_data" %>    
    <% else %>
      <%= f.text_field :data, size: 9, class: "campo_data" %>
    <% end %>   
  </div>  

  <div class="field">
    <%= f.label :tipo_documento_id, "Tipo Documento" %><br>
    <%= TipoDocumento.find(params["tipo"]).descricao %>
    <%= hidden_field_tag :tipo_documento, "", value: params["tipo"] %>
  </div>

  <div class="field">
    <%= f.label :classificacao_documento_id, "Classifição Documento:" %><br>    
    <%= f.select :classificacao_documento_id, options_for_select(@classificacao_documento.map{|c|[c.descricao, c.id]}) %>
  </div>

  <div class="field">
    <%= f.label :nome_url, "Arquivo:" %><br>
    <%= f.file_field 'nome_url' %>
  </div>

  <br>

  <% if params["tipo"] == "3" %>
    <div class="field">
      <%= f.label :resposta_necessidade, "Necessidade de Resposta:" %>
      <%= f.check_box :resposta_necessidade %>
    </div>

    <div class="field">
      <%= f.label :data_verificar_resposta, "Verificar Resposta na Data" %><br>
      <% if @documento["data_verificar_resposta"] %>
        <%= f.text_field :data_verificar_resposta, value: (l @documento["data_verificar_resposta"]), size: 7, class: "campo_data" %>    
      <% else %>
        <%= f.text_field :data_verificar_resposta, size: 7, class: "campo_data" %>
      <% end %>     
  </div>

    <div class="field">
      <%= f.label :numero_processual, "Número de Incidente Processual" %><br>  
      <%= f.text_field :numero_processual, class: "numero_processo" %><br>

      <%= f.label :data_resposta, "Data Resposta" %><br>
      <% if @documento["data_resposta"] %>
        <%= f.text_field :data_resposta, value: (l @documento["data_resposta"]), size: 7, class: "campo_data" %>    
      <% else %>
        <%= f.text_field :data_resposta, size: 7, class: "campo_data" %>
      <% end %>  
    </div>    

    <div class="field">
      <%= f.label :resposta %><br>
      <%= f.text_area :resposta %>
    </div>
  <% end %>

  <%if params["processo"] %>
    <%= f.hidden_field :processo_judicial_id, value: params["processo"] %>
  <% end %>

  <%if params["inquerito"] %>
    <%= f.hidden_field :inquerito_policial_id, value: params["inquerito"] %>
  <% end %>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>

  <%if params["processo"] %>
		<%= link_to image_tag("seta-voltar.png", :alt => "Voltar", size: "25"), "/processo_judiciais/#{params["processo"]}/edit" %>
    <%= link_to 'Voltar', "/processo_judiciais/#{params["processo"]}/edit" %>    
  <% end %>

  <%if params["inquerito"] %>
		<%= link_to image_tag("seta-voltar.png", :alt => "Voltar", size: "25"), "/inquerito_policiais/#{params["inquerito"]}/edit" %>
    <%= link_to 'Voltar', "/inquerito_policiais/#{params["inquerito"]}/edit" %>    
  <% end %>