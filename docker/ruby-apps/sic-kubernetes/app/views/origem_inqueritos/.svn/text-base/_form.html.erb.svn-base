<%= form_for(@origem_inquerito) do |f| %>
  <% if @origem_inquerito.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@origem_inquerito.errors.count, "erro(s)") %> impediram esta Origem Inqu√©rito de ser salva:</h2>

      <ul>
      <% @origem_inquerito.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :cidade_id, "Cidade" %><br>
    <%= f.select :cidade_id, (cidades.map{|f| [f.nome, f.id] }) %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
