<h1>Listing infracoes</h1>

<table>
  <thead>
    <tr>
      <th>Inquerito policial</th>
      <th>Descricao codigo</th>
      <th>Descricao nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @infracoes.each do |infracao| %>
      <tr>
        <td><%= infracao.inquerito_policial_id %></td>
        <td><%= infracao.descricao_codigo %></td>
        <td><%= infracao.descricao_nome %></td>
        <td><%= link_to 'Show', infracao %></td>
        <td><%= link_to 'Edit', edit_infracao_path(infracao) %></td>
        <td><%= link_to 'Destroy', infracao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Infracao', new_infracao_path %>
