<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Lista de Classificação de Andamento</h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
        <%= link_to 'Nova Classificação de Andamento', new_classificacao_andamento_path, :class=> "btn btn-primary" %>
        <table class="table table-hover margin-top">
          <thead>
            <tr>
              <th>Descrição</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @classificacao_andamentos.each do |classificacao_andamento| %>
              <tr>
                <td><%= classificacao_andamento.descricao %></td>
                <td class="icon-width"><%= link_to 'Exibir', classificacao_andamento, :class=> "intra-icon icon-exibir" %></td>
                <td class="icon-width"><%= link_to 'Editar', edit_classificacao_andamento_path(classificacao_andamento), :class=> "intra-icon icon-edit" %></td>
                <td class="icon-width"><%= link_to 'Deletar', classificacao_andamento, :class=> "intra-icon icon-excluir", method: :delete, data: { confirm: 'Tem certeza?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

