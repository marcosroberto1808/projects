<%= form_for(@classificacao_andamento) do |f| %>
  <% if @classificacao_andamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@classificacao_andamento.errors.count, "erro(s)") %> impediram essa classificação de ser salva:</h2>

      <ul>
      <% @classificacao_andamento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descricao, "Descriçao" %><br>
    <%= f.text_field :descricao %>
  </div>
  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
