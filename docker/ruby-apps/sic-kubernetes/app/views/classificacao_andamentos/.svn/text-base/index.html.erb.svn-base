<h1>Lista de Classificação de Andamento</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Descrição</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @classificacao_andamentos.each do |classificacao_andamento| %>
      <tr>
        <td><%= classificacao_andamento.descricao %></td>
        <td><%= link_to 'Exibir', classificacao_andamento %></td>
        <td><%= link_to 'Editar', edit_classificacao_andamento_path(classificacao_andamento) %></td>
        <td><%= link_to 'Deletar', classificacao_andamento, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Classificação de Andamento', new_classificacao_andamento_path %>
